{% extends 'InfocorpSintufBundle::layout.html.twig' %}

{% block content %}
  
<div class="container">
  <div class="row">

     	<div class="span2">
        <ul class="nav nav-list">
          <li class="nav-header">Parceiros</li>
            {% for partner in partner %}
              <li>
                <a href="{{ path('infocorp_sintuf_partner_view', {slug: partner.slug}) }}">
                  {{ partner.title }}
                </a>
              </li>
            {% endfor %}
        </ul>
      </div>

      
      
      
    	<div class="span10">
        <div class="well">
    		<article>
    		    <h1 class="title-direction">
    		    	{{ partner.title }}
    		    </h1>

            <div class="image-direction">
              {% thumbnail partner.image, 'big' %}
          </div>  

    		    <div class="content-direction">
    		    	{{ partner.content | raw }}
    			</div>	    
    	    </article>
          </div>
    	</div>
      

  </div>
</div>

{% endblock %}